<p style="color: green"><%= notice %></p>

<%= render @forniture %>

<div>
  <%= link_to "Edit this forniture", edit_forniture_path(@forniture) %> |
  <%= link_to "Back to fornitures", fornitures_path %>

  <%= button_to "Destroy this forniture", @forniture, method: :delete %>
</div>

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
  }

  p {
    color: green;
    margin-bottom: 10px;
  }

  .forniture {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    background-color: white;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.1);
  }

  .forniture-links {
    margin-top: 20px;
    text-align: center;
  }

  .forniture-links a {
    margin-right: 10px;
    color: #333;
    text-decoration: none;
  }

  .forniture-links a:hover {
    text-decoration: underline;
  }

  .destroy-forniture-form {
    display: inline-block;
    margin-top: 10px;
  }

  .destroy-forniture-form button {
    padding: 5px 10px;
    background-color: #dc3545;
    border: none;
    color: white;
    font-size: 14px;
    border-radius: 4px;
    cursor: pointer;
  }

  .destroy-forniture-form button:hover {
    background-color: #c82333;
  }
</style>