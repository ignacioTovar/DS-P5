<style>
h1 {
  font-size: 24px;
  color: #333;
  margin-bottom: 10px;
}

.welcome-message {
  margin-bottom: 10px;
}

.button {
  display: inline-block;
  padding: 8px 16px;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
}

.button:hover {
  background-color: #45a049;
}

.link-button {
  text-decoration: none;
  color: #fff;
}

.link-button:hover {
  text-decoration: underline;
}

.users {
  margin-top: 20px;
}

.user-container {
  background-color: #F4F4F4;
  padding: 10px;
  border-radius: 4px;
  margin-bottom: 10px;
}

.user-show-link {
  display: inline-block;
  margin-top: 10px;
}
</style>

<h1>Users</h1>

<div id="users">
<% if session[:user_id] %>
    <p>Welcome, <%= current_user.nombre %></p>
    <%= link_to 'Log Out', logout_path, method: :delete %>

    <% @users.each do |user| %>
      <%= render user %>
      <p>
        <button class:"button"><%= link_to "Show this user", user %></button>
      </p>
    <% end %>
  
    <button class:"button"><%= link_to "New user", new_user_path %></button> <br>
    <div>
    <%= link_to "Go to fornitures", fornitures_path %>
    </div>
  <% else %>
    <%= link_to 'Log In', login_path %>
  <% end %>

  <%= yield %>
</div>
