<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f1f1f1;
    margin: 0;
    padding: 20px;
  }

  h1 {
    color: #333;
    text-align: center;
    margin-bottom: 20px;
  }

  .users-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .user-card {
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    margin: 10px;
    width: 300px;
  }

  .user-card h3 {
    color: #333;
    margin-top: 0;
  }

  .user-card p {
    margin: 0;
    margin-bottom: 5px;
  }

  .user-actions {
    display: flex;
    justify-content: center;
    margin-top: 10px;
  }

  .user-actions a {
    display: inline-block;
    margin-right: 10px;
    background-color: #333;
    color: #fff;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .user-actions a:hover {
    background-color: #000;
  }

  .new-user-link,
  .new-forniture-link {
    display: inline-block;
    margin-top: 10px;
    background-color: #333;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .new-user-link:hover,
  .new-forniture-link:hover {
    background-color: #000;
  }

  p.notice {
    color: green;
    font-weight: bold;
  }

  .button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #333;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .button:hover {
    background-color: #000;
  }
</style>

<h1>Users</h1>

<div id="users">
<% if session[:user_id] %>
    <p>Welcome, <%= current_user.nombre %></p>
    <%= link_to 'Log Out', logout_path, method: :delete %>

    <% @users.each do |user| %>
      <%= render user %>
      <p>
        <button class:"button"><%= link_to "Show this user", user %></button>
      </p>
    <% end %>
  
    <button class:"button"><%= link_to "New user", new_user_path %></button> <br>
    <button class:"button"><%= link_to "New forniture", new_forniture_path %></button>
  <% else %>
    <%= link_to 'Log In', login_path %>
  <% end %>

  <%= yield %>
</div>
