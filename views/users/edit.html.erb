<style>
h1 {
  font-size: 24px;
  color: #333;
  margin-bottom: 10px;
}

.form-container {
  background-color: #F4F4F4;
  padding: 20px;
  border-radius: 4px;
}

.form-field {
  margin-bottom: 10px;
}

.form-label {
  display: block;
  font-weight: bold;
  color: #333;
}

.form-input {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.form-submit {
  margin-top: 10px;
}

.back-link {
  margin-top: 20px;
}

.back-link a {
  color: #333;
  text-decoration: none;
}

.back-link a:hover {
  text-decoration: underline;
}
</style>

<h1>Editing user</h1>

<%= render "form", user: @user %>

<br>

<div>
  <%= link_to "Show this user", @user %> |
  <%= link_to "Back to users", users_path %>
</div>
